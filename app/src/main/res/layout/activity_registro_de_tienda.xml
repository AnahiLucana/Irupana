<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lblTNombre"
        tools:text="Nombre"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp" />

    <requestFocus
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/txtTNombre"
        android:background="@android:color/holo_orange_dark"
        android:layout_marginEnd="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:padding="10dp"
        android:textColorLink="@android:color/background_dark" />

    <TextView
        android:text="E-mail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lblTEmail"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailSubject"
        android:ems="10"
        android:id="@+id/txtTEmail"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="5dp"
        android:background="@android:color/holo_orange_dark"
        android:padding="10dp" />

    <TextView
        android:text="Contraseña"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lblTPassword"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/txtTPassword"
        android:layout_marginEnd="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:background="@android:color/holo_orange_dark"
        android:padding="10dp" />

    <TextView
        android:text="Repetir contraseña"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lblTRepetirPassword"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/txtTRepetirPassword"
        android:background="@android:color/holo_orange_dark"
        android:layout_marginEnd="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:padding="10dp" />

    <TextView
        android:text="NIT/Carnet (Dato utilizado para las facturas)"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lblTNit"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/txtTNit"
        android:layout_marginEnd="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:background="@android:color/holo_orange_dark"
        android:padding="10dp" />

    <Button
        android:text="Crear cuenta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnCrearCuentaComoTienda"
        android:layout_marginTop="50dp"
        android:layout_marginStart="120dp"
        android:padding="20dp" />
</LinearLayout>
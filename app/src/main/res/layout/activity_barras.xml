<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="@drawable/irufonba">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="621dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="857dp"
                android:weightSum="1">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1"
                    android:layout_weight="0.28">

                    <ImageButton
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        app:srcCompat="@drawable/cajachoco"
                        android:id="@+id/imgBcd"
                        android:layout_weight="0.41" />

                    <TextView
                        android:text="Barras de chocolate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tipobarra1"
                        android:layout_gravity="center_vertical"
                        android:textSize="16sp"
                        android:paddingStart="15dp"
                        android:textStyle="bold"
                        android:textColor="@android:color/background_dark" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_weight="0.23">

                    <ImageButton
                        android:layout_width="118dp"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/cajafrutos"
                        android:id="@+id/imgfr"
                        android:layout_weight="0.63" />

                    <TextView
                        android:text="Barras de frutos rojos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tipobarra2"
                        android:layout_weight="0.68"
                        android:layout_gravity="center_vertical"
                        android:textSize="@dimen/activity_vertical_margin"
                        android:paddingLeft="15dp"
                        android:textColor="@android:color/black"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.07">

                    <ImageButton
                        android:layout_width="118dp"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/cajaajonjoli"
                        android:id="@+id/imgAjon"
                        android:paddingEnd="10dp"
                        android:paddingStart="15dp"
                        android:layout_weight="0.58" />

                    <TextView
                        android:text="Barras de ajonjoli"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tipobarratres"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:textSize="16sp"
                        android:paddingLeft="15dp"
                        android:textColor="@android:color/black"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="118dp"
                    android:layout_weight="0.16">

                    <ImageButton
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/cajacoco"
                        android:id="@+id/imgcoco"
                        android:layout_weight="0.58" />

                    <TextView
                        android:text="Barras de coco"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tipobarracua"
                        android:layout_weight="1"
                        android:textSize="16sp"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="15dp"
                        android:textColor="@android:color/black"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
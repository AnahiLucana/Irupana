<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="@drawable/irufonba">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="621dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="857dp"
                android:weightSum="1">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1"
                    android:layout_weight="0.01">

                    <ImageButton
                        android:layout_width="120dp"
                        android:layout_height="160dp"
                        app:srcCompat="@drawable/cajachoco"
                        android:id="@+id/imgBcd"
                        android:layout_weight="0.10" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="75dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.72">

                        <TextView
                            android:text="Barras de chocolate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/tipobarra1"
                            android:layout_gravity="center_vertical"
                            android:textSize="16sp"
                            android:paddingStart="15dp"
                            android:textStyle="bold"
                            android:textColor="@android:color/background_dark"
                            android:layout_marginTop="50dp" />

                        <Spinner
                            android:layout_width="164dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/sp1"
                            android:layout_marginTop="10dp" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_weight="0.23">

                    <ImageButton
                        android:layout_width="118dp"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/cajafrutos"
                        android:id="@+id/imgfr"
                        android:layout_weight="0.24" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="243dp"
                        android:layout_height="match_parent">

                        <TextView
                            android:text="Barras de frutos rojos"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/tipobarra2"
                            android:layout_gravity="center_vertical"
                            android:textSize="@dimen/activity_vertical_margin"
                            android:paddingLeft="15dp"
                            android:textColor="@android:color/black"
                            android:textStyle="bold"
                            android:layout_marginTop="50dp" />

                        <Spinner
                            android:layout_width="158dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/sp2"
                            android:layout_marginTop="10dp" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.03">

                    <ImageButton
                        android:layout_width="118dp"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/cajaajonjoli"
                        android:id="@+id/imgAjon"
                        android:paddingEnd="10dp"
                        android:paddingStart="15dp"
                        android:layout_weight="0.58" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="238dp"
                        android:layout_height="match_parent">

                        <TextView
                            android:text="Barras de ajonjoli"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/tipobarratres"
                            android:layout_gravity="center_vertical"
                            android:textSize="16sp"
                            android:paddingLeft="15dp"
                            android:textColor="@android:color/black"
                            android:textStyle="bold"
                            android:layout_marginTop="50dp" />

                        <Spinner
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/sp3"
                            android:layout_marginTop="10dp" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="118dp"
                    android:layout_weight="0.16">

                    <ImageButton
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/cajacoco"
                        android:id="@+id/imgcoco"
                        android:layout_weight="0.58" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="229dp"
                        android:layout_height="match_parent">

                        <TextView
                            android:text="Barras de coco"
                            android:layout_width="234dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/tipobarracua"
                            android:textSize="16sp"
                            android:layout_gravity="center_vertical"
                            android:paddingLeft="15dp"
                            android:textColor="@android:color/black"
                            android:textStyle="bold"
                            android:layout_marginTop="50dp" />

                        <Spinner
                            android:layout_width="154dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/sp4"
                            android:layout_marginTop="10dp" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>